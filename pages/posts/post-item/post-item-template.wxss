.post-container {
  display: flex;
  flex-direction: column;
  margin-top: 20rpx;
  margin-bottom: 40rpx;
  background-color: #fff;
  border-top: 1px solid #ededed;
  border-bottom: 1px solid #ededed;
  padding-bottom: 10rpx;
}

.post-author-date {
  margin: 10rpx 0 20rpx 10rpx;
  display: flex;
  align-items: center;
}

.post-author {
  height: 60rpx;
  width: 60rpx;
  /* vertical-align: middle; */
}

.post-date {
  margin-left: 20rpx;
  /* vertical-align: middle; */
  font-size: 26rpx;
}

.post-title {
  font-size: 34rpx;
  font-weight: bold;
  margin-left: 10px;
  margin-bottom: 10px;
  color: #333;
}

.post-image {
  width: 100%;
  height: 340rpx;
  margin-bottom: 15px;
}

.post-content {
  font-size: 28rpx;
  color: #666;
  letter-spacing: 2rpx;
  margin-left: 20rpx;
  margin-bottom: 20rpx;
}

.post-link {
  font-size: 26rpx;
  margin-left: 20rpx;
  display: flex;
  align-items: center;
}

.post-link-image {
  width: 32rpx;
  height: 32rpx;
  margin-right: 16rpx;
}

.post-link-font {
  margin-right: 40rpx;
  margin-left: 10rpx;
}
