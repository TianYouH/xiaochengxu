<import src='post-item/post-item-template.wxml' />
<view>
  <swiper indicator-dots autoplay interval="2000" circular>
    <swiper-item>
      <image data-id="3" bindtap="onGotoPostDetailTap" src="/images/wx.png"></image>
    </swiper-item>
    <swiper-item>
      <image data-id="4" bindtap="onGotoPostDetailTap" src="/images/vr.png"></image>
    </swiper-item>
    <swiper-item>
      <image data-id="5" bindtap="onGotoPostDetailTap" src="/images/iqiyi.png"></image>
    </swiper-item>
  </swiper>

  <block wx:for="{{posts_key}}" wx:key="postId" >
    <template is='post-item' data="{{ item }}" ></template>
  </block>
</view>