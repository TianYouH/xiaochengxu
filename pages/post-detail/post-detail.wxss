/* pages/post-detail.wxss */
.container {
  display: flex;
  flex-direction: column;
}

.head-image {
  width: 100%;
  height: 460rpx;
}

.author-date {
  display: flex;
  flex-direction: row;
  margin-top: 30rpx;
  margin-left: 20rpx;
  align-items: center;
}

.avatar {
  width: 64rpx;
  height: 64rpx;
}
.author {
  font-size: 30rpx;
  font-weight: 300;
  margin-left: 20rpx;
  color: #666;
}
.const-text {
  font-size: 20rpx;
  margin-left: 20rpx;
  color: #999;
}
.date {
  font-size: 20rpx;
  margin-left: 30rpx;
  color: #999;
}

.title {
  font-size: 36rpx;
  font-weight: 700;
  margin-left: 40rpx;
  margin-top: 30rpx;
  color: #4b556c;
  letter-spacing: 2px;
}

.tool {
  position: relative;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  margin-top: 20rpx;
}

.circle {
  width: 660rpx;
  display: flex;
  justify-content: flex-end;
  
}
.circle image {
  width: 90rpx;
  height: 90rpx;
}

.shore-img {
  margin-left: 30rpx;
}

.horizon {
  width: 660rpx;
  height: 1px;
  background-color: #e5e5e5;
  /* vertical-align: middle;
  position: relative;
  top: 46rpx;
  margin: 0 auto;
  */
  z-index: -99;
  position: absolute;
}

.detail {
  color: #666;
  margin: 20rpx 30rpx 0;
  line-height: 44rpx;
  letter-spacing: 2rpx;
}

.audio {
  width: 102rpx;
  height: 110rpx;
  position: absolute;
  left: 50%;
  margin-left: -51rpx;
  top: 185rpx;
  opacity: .6;
}
